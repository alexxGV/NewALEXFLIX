<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand"
               style="font-family:Impact;color:red"
               asp-controller="Peliculas"
               asp-action="Index">
                ALEXFLIX
            </a>
