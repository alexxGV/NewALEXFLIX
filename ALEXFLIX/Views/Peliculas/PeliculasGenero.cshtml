@model List<Pelicula>
<link rel="stylesheet" href="~/css/fancybox.min.css" media="screen" />


<div class="container page-top">

<h1 class="display-4 text-center">@ViewData["GENERO"]</h1><br />

    <div class="row">
        @foreach (Pelicula peli in Model)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a asp-controller="Peliculas" asp-action="Details" asp-route-idPelicula="@peli.IdPelicula" class="fancybox" rel="ligthbox">
                    <img src="http://127.0.0.1:10000/devstoreaccount1/alexflix/images/@peli.Imagen" class="zoom img-fluid " alt="">
                </a>
            </div>}

    </div>

</div>